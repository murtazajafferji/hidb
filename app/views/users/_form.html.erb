<div class= "internship-form">
<% semantic_form_for @user, :html => { :id => "styled-form" } do |form| %>
  <% form.inputs "Required", :id => "required" do %>	
	<%= form.input :username, :input_html => {:size => "20%"} %>
  <% end %>
  <% form.inputs :name => "Optional", :id => "optional" do %>
		<%= form.input :first_name, :input_html => {:size => "20%"} %>
		<%= form.input :last_name, :input_html => {:size=> "20%"} %>
		<%= form.input :email %>
		<%= form.input :major, :as => :select, :collection => User::MAJOR, :input_html => { :style => 'width: 200px;' } %>
		<%= form.input :yog, :label => "Year of graduation (dddd)" %>
		<%= form.input :linkedin, :label => "Link to LinkedIn Profile" %>
  <% end %>
  <% form.buttons do %>
    <%= form.commit_button %>
  <% end %>
<% end %>
</div>