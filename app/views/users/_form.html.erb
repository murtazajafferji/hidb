<% semantic_form_for @user, :html => { :id => "styled-form" } do |form| %>
  <% form.inputs "Required", :id => "required" do %>	
    <%= form.input :email %>
		<%= form.input :major, :as => :select, :collection => User::MAJOR %>
		<%= form.input :minor, :as => :select, :collection => User::MINOR %>
		<%= form.input :yog, :label => "Year of graduation", :as => :select, :collection => User::YOG %>
  <% end %>
  <% form.inputs :name => "Optional", :id => "optional" do %>
		<%= form.input :first_name %>
		<%= form.input :last_name %>
  <% end %>
  <% form.buttons do %>
    <%= form.commit_button %>
  <% end %>
<% end %>